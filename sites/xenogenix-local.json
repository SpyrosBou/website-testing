{
  "name": "Xenogenix",
  "environment": "local",
  "baseUrl": "https://xenogenix.ddev.site",
  "testPages": [
    "/"
  ],
  "discover": {
    "strategy": "sitemap",
    "sitemapUrl": "https://xenogenix.ddev.site/wp-sitemap.xml",
    "maxPages": 100,
    "maxDepth": 3,
    "include": [
      "^/"
    ],
    "exclude": [
      "^/author/",
      "^/category/",
      "^/tag/"
    ]
  },
  "criticalElements": [
    { "name": "Navigation", "selector": "nav, .navigation, #main-menu" },
    { "name": "Header", "selector": "header, .site-header" },
    { "name": "Footer", "selector": "footer, .site-footer" }
  ]
}
