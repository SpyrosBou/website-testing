{
  "name": "Day Group (Local)",
  "baseUrl": "http://day.local",
  "testPages": [
    "/",
    "/about-us",
    "/contact-us",
    "/our-services",
    "/portfolio",
    "/blog"
  ],
  "forms": [
    {
      "name": "Contact Form",
      "page": "/contact-us",
      "selector": ".wpcf7-form, #contact-form, .contact-form",
      "fields": {
        "name": "input[name*='name'], input[name*='your-name']",
        "email": "input[name*='email'], input[name*='your-email']", 
        "message": "textarea[name*='message'], textarea[name*='your-message']"
      },
      "submitButton": "input[type='submit'], .wpcf7-submit, button[type='submit']"
    }
  ],
  "criticalElements": [
    {
      "name": "Main Navigation",
      "selector": ".main-navigation, #main-menu, nav, .navigation"
    },
    {
      "name": "Header",
      "selector": "header, .site-header, .header"
    },
    {
      "name": "Footer", 
      "selector": "footer, .site-footer, .footer"
    }
  ],
  "expectedElements": {
    "homepage": [".hero-section, .banner, .intro"],
    "contact-us": [".wpcf7-form, #contact-form, .contact-form"],
    "about-us": [".about-content, .about"]
  }
}