{
  "name": "Static Smoke Fixture",
  "baseUrl": "http://127.0.0.1:8080",
  "testPages": ["/", "/about", "/contact"],
  "linkCheck": {
    "maxPerPage": 12,
    "timeoutMs": 4000,
    "followRedirects": true,
    "methodFallback": true
  },
  "resourceErrorBudget": 3,
  "ignoreConsoleErrors": ["font-awesome", "gstatic"],
  "performanceBudgets": {
    "domContentLoaded": 2000,
    "loadComplete": 3500,
    "firstContentfulPaint": 1800
  },
  "criticalElements": [
    { "name": "Navigation", "selector": ".main-navigation, nav" },
    { "name": "Header", "selector": "header, .site-header" },
    { "name": "Footer", "selector": "footer, .site-footer" }
  ],
  "visualThresholds": { "ui_elements": 0.05, "content": 0.1, "dynamic": 0.2 }
}
