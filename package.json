{
  "name": "wordpress-testing-suite",
  "version": "1.0.0",
  "description": "Automated testing suite for WordPress websites",
  "main": "index.js",
  "scripts": {
    "test": "node run-tests.js",
    "test:site": "node run-tests.js",
    "install-browsers": "node scripts/install-browsers.js",
    "setup": "npm install && npm run install-browsers && npx playwright install",
    "clean-test-results": "node scripts/cleanup.js clean-test-results",
    "clean-reports": "node scripts/cleanup.js clean-reports",
    "smoke:nfs": "node run-tests.js --site=nfsmediation-local --profile=smoke",
    "update-baselines": "node run-tests.js --update-baselines --site=example-site",
    "discover_pages": "node scripts/discover-pages.js",
    "lint": "eslint run-tests.js utils/**/*.js scripts/**/*.js playwright.config.js",
    "lint:fix": "eslint run-tests.js utils/**/*.js scripts/**/*.js playwright.config.js --fix",
    "lint:teardown": "node scripts/check-browser-teardown.js",
    "test:unit": "node --test tests/unit/**/*.test.js",
    "format": "prettier -w .",
    "read-reports": "node scripts/read-reports.js"
  },
  "lint-staged": {},
  "keywords": [
    "testing",
    "wordpress",
    "playwright",
    "automation",
    "accessibility"
  ],
  "author": "Web Dev Agency",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^10.4.1",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "pixelmatch": "^5.3.0",
    "playwright-testing-library": "^4.5.0",
    "pngjs": "^7.0.0",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "minimist": "^1.2.8",
    "open": "^10.2.0"
  }
}
