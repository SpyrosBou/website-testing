{
  "name": "wordpress-testing-suite",
  "version": "1.0.0",
  "description": "Automated testing suite for WordPress websites",
  "main": "index.js",
  "scripts": {
    "tester": "node run-tests.js",
    "test": "node run-tests.js",
    "test:site": "node run-tests.js",
    "test:clean": "npm run clean-allure && node run-tests.js",
    "test:site:clean": "npm run clean-allure && node run-tests.js",
    "install-browsers": "npx playwright install",
    "setup": "npm install && npm run install-browsers",
    "clean-old-results": "node scripts/cleanup.js clean-old-results",
    "clean-videos": "node scripts/cleanup.js clean-videos",
    "clean-traces": "node scripts/cleanup.js clean-traces",
    "clean-all-results": "node scripts/cleanup.js clean-all-results",
    "clean-site-results": "node scripts/cleanup.js clean-site-results",
    "allure-report": "node scripts/allure.js",
    "allure-serve": "node scripts/allure.js serve",
    "clean-allure": "node scripts/cleanup.js clean-allure",
    "clean-backup-html": "node scripts/cleanup.js clean-backup-html",
    "smoke:nfs": "node run-tests.js --site=nfsmediation-local --responsive --project=Chrome",
    "update-baselines": "node run-tests.js --update-baselines --site=example-site",
    "lint": "eslint run-tests.js utils/**/*.js scripts/**/*.js playwright.config.js",
    "lint:fix": "eslint run-tests.js utils/**/*.js scripts/**/*.js playwright.config.js --fix",
    "format": "prettier -w ."
  },
  "lint-staged": {},
  
  
  "keywords": [
    "testing",
    "wordpress",
    "playwright",
    "automation",
    "allure",
    "accessibility"
  ],
  "author": "Web Dev Agency",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^10.4.1",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "allure-commandline": "^2.28.0",
    "allure-playwright": "^3.3.3",
    "playwright-testing-library": "^4.5.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "minimist": "^1.2.8"
  }
}
